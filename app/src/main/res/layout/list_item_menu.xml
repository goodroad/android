<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/expandedListItemIcon"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/expandedListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_submenu_padding_default"
        android:paddingTop="@dimen/layout_submenu_padding_default"
        android:paddingLeft="10dp"
        android:textSize="@dimen/nav_submenu_font_size"
        android:textColor="@color/list_item_submenu_title"/>
</LinearLayout>