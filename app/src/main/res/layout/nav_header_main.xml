<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorLightBlack"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_margin_top"
    android:paddingLeft="@dimen/nav_header_horizontal_margin"
    android:paddingRight="@dimen/nav_header_horizontal_margin"
    android:paddingTop="@dimen/nav_header_margin_bottom">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/nav_header_margin_top"
        android:paddingBottom="@dimen/nav_header_margin_bottom"
        android:src="@mipmap/icon_lnb_logo"
        />

</LinearLayout>
