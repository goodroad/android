<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_menu_padding_default"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingTop="@dimen/layout_menu_padding_default"
        android:textSize="@dimen/nav_menu_font_size"
        android:textColor="@color/list_group_title"/>
    <ImageView
        android:id="@+id/list_collapse"
        android:layout_marginRight="@dimen/icon_menu_collapse_margin"
        android:src="@mipmap/icon_arrow_down"
        android:layout_gravity="right|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>